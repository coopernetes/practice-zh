{
  "name": "practice-zh",
  "version": "0.0.1-alpha.0",
  "description": "Practice Chinese through flash cards in your browser",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "node ./scripts/clean.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsx --env-file=.env src/index.ts",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "seed:words": "knex seed:run --specific=1_words_additional.ts",
    "sqlite:clean": "npm run clean && npm run migrate && npm run seed",
    "sqlite:setup": "npm run pipeline && npm run sqlite:clean",
    "pipeline": "node ./scripts/pipeline.js",
    "pipeline:full": "node ./scripts/pipeline.js --full",
    "pipeline:stats": "node ./scripts/pipeline.js stats",
    "pipeline:find-unknown": "node ./scripts/pipeline.js find-unknown",
    "pipeline:enrich": "node ./scripts/pipeline.js enrich",
    "pipeline:iterate": "node ./scripts/pipeline.js enrich && npm run seed:words && node ./scripts/pipeline.js find-unknown"
  },
  "keywords": [
    "learning",
    "education",
    "language",
    "chinese"
  ],
  "author": "Thomas Cooper",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^9.0.0",
    "@fastify/view": "^11.1.1",
    "better-sqlite3": "^12.5.0",
    "ejs": "^3.1.10",
    "fastify": "^5.6.2",
    "knex": "^3.1.0",
    "nodejieba": "^3.5.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@types/ejs": "^3.1.5",
    "@types/knex": "^0.15.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "prettier-plugin-ejs": "^1.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
